<Window x:Class="ReadAndHandleFileCSV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReadAndHandleFileCSV"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="AliceBlue" Margin="0,111,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="113*"/>
            <RowDefinition Height="210*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="CSVDataView"  Grid.RowSpan="2" Margin="10,10,10,47" Background="Beige">
        </DataGrid>
        <Button Content="Import CSV" HorizontalAlignment="Left" Margin="702,-64,0,0" VerticalAlignment="Top" Click="Button_ImportCSV"/>


    </Grid>
</Window>

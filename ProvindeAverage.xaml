<Window x:Class="ReadAndHandleFileCSV.ProvindeAverage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReadAndHandleFileCSV"
        mc:Ignorable="d"
        Title="ProvindeAverage" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtFolderPath" HorizontalAlignment="Left" Margin="10,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="664" IsEnabled="False"/>
        <Button x:Name="btnBrowser" Content="Browse" HorizontalAlignment="Left" Margin="694,77,0,0" VerticalAlignment="Top" Width="81" Click="Button_Click"/>
        <DataGrid x:Name="dgvData" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,140,10,10"/>
    </Grid>
</Window>
